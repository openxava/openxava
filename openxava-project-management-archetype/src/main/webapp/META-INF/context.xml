	      username="user" password=""
	      driverClassName="com.ibm.db2.jcc.DB2Driver" 
	      url="jdbc:db2://localhost:50000/yourappdb"/>
	-->
	
	<!-- Firebird
	<Resource name="jdbc/yourappDS" auth="Container" type="javax.sql.DataSource"
